{
  "expo": {
    "name": "TrackMe",
    "slug": "trackme",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#3B82F6"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.trackme.app",
      "infoPlist": {
        "NSUserTrackingUsageDescription": "TrackMe needs access to track your app usage to provide time tracking insights.",
        "NSFaceIDUsageDescription": "Use Face ID to securely access your time tracking data."
      }
    },
    "android": {
      "package": "com.trackme.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3B82F6"
      },
      "permissions": [
        "android.permission.PACKAGE_USAGE_STATS",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.FOREGROUND_SERVICE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store"
    ]
  }
}
